{

    "manifest_version": 2,
    "name": "Pinned ProtonMail",
    "version": "2.0",
  
    "description": "Opens new tab with ProtonMail website or switches to it if it's already open.",
  
    "icons": {
        "48": "icons/favicon.png"
    },

    "permissions": [
        "tabs"
    ],

    "browser_action": {
        "default_icon": {
            "48": "icons/favicon.png"
        },
        "default_title": "ProtonMail",
        "default_area": "navbar"
    },

    "background": {
        "scripts": ["protonmail.js"]
    }
  
  }
  
  